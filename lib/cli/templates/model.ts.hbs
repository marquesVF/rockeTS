import { Entity, {{#if columns}}Column, {{/if}} PrimaryGeneratedColumn, CreateDateColumn, UpdateDateColumn } from 'typeorm'
{{> imports}}

@Entity()
export default class {{name}} {

    @PrimaryGeneratedColumn('uuid')
    id: string

    @CreateDateColumn({ type: 'datetime' })
    createdAt: Date

    @UpdateDateColumn({ type: 'datetime' })
    updatedAt: Date

    {{#each columns}}
    @Column({{#if this.nullable}}{ nullable: true }{{/if}})
    {{this.name}}{{#if this.nullable}}?{{/if}}: {{this.type}}

    {{/each}}
    {{> relations}}
}
